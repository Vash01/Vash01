<!DOCTYPE html>
<html lang="en">

<head>
  <link type="text/css" rel="stylesheet" href="/css/Teacher/Dashboard.css" />
  <%- include('../../partial/head'); %>
</head>

<body class="container">

  <header>
    <nav class="navbar navbar-expand-sm navbar-light bg-dark">
      <a class="navbar-brand text-center ">Result Managment System</a>
      <%- include('../../partial/logout'); %>
    </nav>
  </header>
  <main>
    <div class="jumbotron py-5 vh-100">
      <div class=" text-center ">
        <div class="row justify-content">
          <div class="col-4 ">
            <button type="button" class="btn-lg px-5 mb-4 me-2 bg-dark add-btn"
              onclick="window.location.href='/Teacher/Add'">Add
              Records</button>
          </div>
        </div>
      </div>

      <div class="mask d-flex align-items-center h-100">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="text-center">
                <h2>Result</h2>
              </div>
              <div class="table-responsive" style="overflow-x:hidden;">
                <table class="table table-dark table-bordered  mb-0">
                  <thead>
                    <th>Name:</th>
                    <th>Roll Number:</th>
                    <th>Date Of Birth:</th>
                    <th>Score:</th>
                    <th>Actions:</th>
                  </thead>
                  <tbody>
                    <% if (results.length> 0){ %>
                      <% results.forEach(result=> {%>
                        <tr>
                          <td class="c1">
                            <%= result.Name %>
                          </td>
                          <td class="c1">
                            <%= result.Rollno %>
                          </td>
                          <td class="c1">
                            <%= result.DOB %>
                          </td>
                          <td class="c1">
                            <%= result.Score %>
                          </td>
                          <td>
                            <div class="row justify-content-center">
                              <div class="col-13">
                                <button type="button" id="match" class="button"
                                onclick="window.location.href='/Teacher/Edit/<%= result.Rollno %>'" aria-label="edit">
                                  <span class="button_icon btn-sm bg-dark add-btn" style="color:blue">
                                    <ion-icon name="create-outline" role="img" class="md hydrated"></ion-icon>
                                  </span></button>
                                <button type="button" id="match1" class="button"
                                onclick="window.location.href='/Teacher/Dashboard/<%= result.Rollno %>'" aria-label="edit">
                                  <span class="button_icon btn-sm bg-dark add-btn" style="color:red">
                                    <ion-icon name="trash-outline"></ion-icon>
                                  </span></button>
                          </td>
                        </tr>
                      <% }) %>
                     <% }%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </main>
  <footer>
    <%- include('../../partial/footer'); %>
  </footer>

  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</body>

</html>